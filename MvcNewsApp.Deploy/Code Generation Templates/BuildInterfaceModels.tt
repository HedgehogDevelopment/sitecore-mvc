<#
SitecoreTemplate template = Model as SitecoreTemplate;

if (template!=null)
{
#>

namespace <#= template.Namespace#>
{
	public partial interface <#=template.Name#> : <# GetBaseTemplateNames(template, true); #>
	
	{
<# BuildFields(template, true); #>
	}
